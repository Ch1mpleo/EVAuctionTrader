@page
@using EVAuctionTrader.BusinessObject.Enums
@model EVAuctionTrader.Presentation.Pages.AuctionPages.MyWonAuctionsModel
@{
    ViewData["Title"] = "My Won Auctions";
}

@section Styles {
    <link rel="stylesheet" href="~/css/posts.css" />
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="posts-page-clean">
    <div class="container">
        <!-- Header -->
        <div class="posts-header-clean">
            <h1 class="posts-title-clean">
                <i class="bi bi-trophy-fill"></i>
                My Won Auctions
            </h1>
            <p class="posts-subtitle-clean">View all auctions you've won</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search Bar -->
        <div class="staff-card-clean mb-4">
            <div class="staff-card-body-clean" style="padding: 1rem;">
                <form method="get" style="display: flex; gap: 0.75rem; align-items: center;">
                    <div style="flex: 1;">
                        <input type="text" name="search" class="filter-input-compact"
                               placeholder="Search won auctions by title or description..."
                               value="@Model.Search">
                    </div>
                    <button type="submit" class="btn-filter-compact">
                        <i class="bi bi-search"></i> Search
                    </button>
                    @if (!string.IsNullOrEmpty(Model.Search))
                    {
                        <a asp-page="/AuctionPages/MyWonAuctions" class="btn-filter-clear">
                            <i class="bi bi-x"></i> Clear
                        </a>
                    }
                </form>
            </div>
        </div>

        <!-- Won Auctions Grid -->
        @if (Model.WonAuctions != null && Model.WonAuctions.Any())
        {
            <div class="row g-4 mb-4">
                @foreach (var auction in Model.WonAuctions)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="post-card-modern won-auction-card">
                            <!-- Winner Badge -->
                            <div class="winner-ribbon">
                                <i class="bi bi-trophy-fill"></i>
                                <span>WON</span>
                            </div>

                            <!-- Image -->
                            <div class="post-image-wrapper">
                                @if (!string.IsNullOrEmpty(auction.PhotoUrl))
                                {
                                    <img src="@auction.PhotoUrl" alt="@auction.Title" class="post-img">
                                }
                                else
                                {
                                    <div class="post-img-placeholder">
                                        @if (auction.AuctionType == AuctionType.Vehicle)
                                        {
                                            <i class="bi bi-car-front-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-battery-charging"></i>
                                        }
                                    </div>
                                }

                                <!-- Auction Type Badge -->
                                <div class="auction-type-badge @(auction.AuctionType == AuctionType.Vehicle ? "type-vehicle" : "type-battery")">
                                    @if (auction.AuctionType == AuctionType.Vehicle)
                                    {
                                        <i class="bi bi-car-front-fill"></i>
                                        <span>Vehicle</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-battery-charging"></i>
                                        <span>Battery</span>
                                    }
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="post-card-content">
                                <h3 class="post-card-title">@auction.Title</h3>
                                
                                <p class="post-card-description">
                                    @(auction.Description?.Length > 100 ? auction.Description.Substring(0, 100) + "..." : auction.Description)
                                </p>

                                <!-- Vehicle/Battery Details -->
                                @if (auction.Vehicle != null)
                                {
                                    <div class="detail-tags">
                                        <span class="detail-tag">
                                            <i class="bi bi-building"></i> @auction.Vehicle.Brand @auction.Vehicle.Model
                                        </span>
                                        <span class="detail-tag">
                                            <i class="bi bi-calendar"></i> @auction.Vehicle.Year
                                        </span>
                                        <span class="detail-tag">
                                            <i class="bi bi-speedometer"></i> @auction.Vehicle.OdometerKm.ToString("N0") km
                                        </span>
                                    </div>
                                }

                                @if (auction.Battery != null)
                                {
                                    <div class="detail-tags">
                                        <span class="detail-tag">
                                            <i class="bi bi-building"></i> @auction.Battery.Manufacturer
                                        </span>
                                        <span class="detail-tag">
                                            <i class="bi bi-lightning-charge"></i> @auction.Battery.CapacityKwh kWh
                                        </span>
                                        <span class="detail-tag">
                                            <i class="bi bi-heart-pulse"></i> @auction.Battery.SohPercent% SOH
                                        </span>
                                    </div>
                                }

                                <!-- Auction Info -->
                                <div class="auction-info-grid">
                                    <div class="info-item">
                                        <span class="info-label">Won Price</span>
                                        <span class="info-value won-price">$@auction.CurrentPrice.ToString("N2")</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Starting Price</span>
                                        <span class="info-value">$@auction.StartPrice.ToString("N2")</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Total Bids</span>
                                        <span class="info-value">@auction.TotalBids</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Ended On</span>
                                        <span class="info-value">@auction.EndTime.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="post-card-actions">
                                    <a asp-page="/AuctionPages/Details" asp-route-id="@auction.Id"
                                       class="btn-view-details">
                                        View Details <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.WonAuctions.TotalPages > 1)
            {
                <div class="pagination-modern">
                    @if (Model.WonAuctions.HasPrevious)
                    {
                        <a asp-page="/AuctionPages/MyWonAuctions"
                           asp-route-pageNumber="@(Model.WonAuctions.CurrentPage - 1)"
                           asp-route-search="@Model.Search"
                           class="page-btn-modern">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    }

                    <span class="page-info-modern">
                        Page @Model.WonAuctions.CurrentPage of @Model.WonAuctions.TotalPages
                    </span>

                    @if (Model.WonAuctions.HasNext)
                    {
                        <a asp-page="/AuctionPages/MyWonAuctions"
                           asp-route-pageNumber="@(Model.WonAuctions.CurrentPage + 1)"
                           asp-route-search="@Model.Search"
                           class="page-btn-modern">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <div class="empty-state-modern">
                <div class="empty-icon">
                    <i class="bi bi-trophy"></i>
                </div>
                <h3 class="empty-title">No Won Auctions Yet</h3>
                <p class="empty-description">
                    You haven't won any auctions yet. Keep bidding and you might win your first auction!
                </p>
                <a asp-page="/AuctionPages/Index" class="btn-reset-filters">
                    <i class="bi bi-lightning-charge"></i> Browse Auctions
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                alert.style.transition = 'opacity 0.3s';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);
    </script>
}

<style>
    /* Won Auction Card Styles */
    .won-auction-card {
        position: relative;
        border: 2px solid rgba(255, 215, 0, 0.3);
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.05) 0%, var(--bg-card) 100%);
    }

    .won-auction-card:hover {
        border-color: rgba(255, 215, 0, 0.5);
        box-shadow: 0 12px 32px rgba(255, 215, 0, 0.15);
    }

    /* Winner Ribbon */
    .winner-ribbon {
        position: absolute;
        top: 15px;
        right: -35px;
        width: 150px;
        background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
        padding: 8px 0;
        transform: rotate(45deg);
        box-shadow: 0 4px 12px rgba(255, 165, 0, 0.6);
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        color: white;
        font-weight: 800;
        font-size: 0.75rem;
        letter-spacing: 1.5px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .winner-ribbon::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, transparent, rgba(255,255,255,0.2), transparent);
        animation: ribbonShine 3s ease-in-out infinite;
    }

    @@keyframes ribbonShine {
        0% { transform: translateX(-100%) rotate(45deg); }
        50%, 100% { transform: translateX(200%) rotate(45deg); }
    }

    /* Detail Tags */
    .detail-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .detail-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.75rem;
        background: rgba(0, 112, 243, 0.1);
        border: 1px solid rgba(0, 112, 243, 0.2);
        border-radius: 6px;
        font-size: 0.75rem;
        color: #0070f3;
        font-weight: 500;
    }

    .detail-tag i {
        font-size: 0.875rem;
    }

    /* Auction Info Grid */
    .auction-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .info-label {
        font-size: 0.75rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 0.875rem;
        font-weight: 600;
        color: #fff;
    }

    .won-price {
        color: #FFD700;
        font-size: 1.125rem;
        font-weight: 700;
    }

    /* Auction Type Badge */
    .auction-type-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.875rem;
        border-radius: 8px;
        font-size: 0.8125rem;
        font-weight: 600;
        color: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.3);
        z-index: 5;
    }

    .auction-type-badge.type-vehicle {
        background: linear-gradient(135deg, #0070f3, #0059c1);
    }

    .auction-type-badge.type-battery {
        background: linear-gradient(135deg, #00d4aa, #00ab8a);
    }

    /* Filter Styles */
    .filter-input-compact {
        width: 100%;
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
        border: 1px solid #2a2a2a;
        border-radius: 8px;
        background: #0a0a0a;
        color: #fff;
        transition: all 0.2s;
    }

    .filter-input-compact:focus {
        outline: none;
        border-color: #0070f3;
        box-shadow: 0 0 0 3px rgba(0, 112, 243, 0.1);
    }

    .btn-filter-compact {
        padding: 0.75rem 1.5rem;
        font-size: 0.875rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        background: linear-gradient(135deg, #0070f3 0%, #0051cc 100%);
        color: white;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-filter-compact:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(0, 112, 243, 0.3);
    }

    .btn-filter-clear {
        padding: 0.75rem 1.5rem;
        font-size: 0.875rem;
        font-weight: 600;
        border: 1px solid #2a2a2a;
        border-radius: 8px;
        background: #1a1a1a;
        color: #aaa;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-filter-clear:hover {
        background: #2a2a2a;
        color: #fff;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .auction-info-grid {
            grid-template-columns: 1fr;
        }

        .detail-tags {
            flex-direction: column;
        }

        .detail-tag {
            width: 100%;
            justify-content: center;
        }
    }
</style>
