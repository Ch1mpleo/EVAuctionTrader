@page
@model EVAuctionTrader.Presentation.Pages.Wallet.RechargeCancelledModel
@{
    ViewData["Title"] = "Payment Cancelled";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="staff-page-clean">
 <div class="container">
   <div class="row justify-content-center">
        <div class="col-lg-8">
     <!-- Cancelled State -->
     <div class="staff-card-clean" style="text-align: center; padding: 3rem 2rem;">
         <div style="width: 100px; height: 100px; margin: 0 auto 2rem; background: rgba(245, 158, 11, 0.15); border: 3px solid #f59e0b; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
     <i class="bi bi-x-circle-fill" style="font-size: 3rem; color: #f59e0b;"></i>
</div>

    <h1 style="color: #fff; font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">
         Payment Cancelled
  </h1>

    <p style="color: #888; font-size: 1.125rem; margin-bottom: 2rem;">
   You've cancelled the payment process. No charges have been made to your account.
      </p>

   <div class="info-card-clean" style="margin-bottom: 2rem; text-align: left; background: rgba(245, 158, 11, 0.05); border-color: rgba(245, 158, 11, 0.2);">
      <div class="info-item-clean">
   <div class="info-label-clean">
       <i class="bi bi-key"></i>
      Payment ID
      </div>
     <div class="info-value-clean">
    @Model.PaymentId
    </div>
 </div>
     <div class="info-item-clean">
  <div class="info-label-clean">
 <i class="bi bi-shield-check"></i>
     Status
   </div>
     <div class="info-value-clean">
   <span class="badge-clean badge-danger">
  <i class="bi bi-x-circle"></i>
        Cancelled
    </span>
  </div>
     </div>
     </div>

      <div class="action-group-clean" style="justify-content: center;">
  <a asp-page="/Wallet/Recharge" class="btn-clean btn-primary-clean">
    <i class="bi bi-arrow-clockwise"></i>
   Try Again
     </a>
        <a asp-page="/Wallet/Index" class="btn-clean btn-secondary-clean">
       <i class="bi bi-wallet2"></i>
    Back to Wallet
    </a>
   </div>
     </div>

    <!-- Why did this happen? -->
    <div class="staff-card-clean">
  <div class="staff-card-header-clean">
     <h3 class="staff-card-title-clean">
     <i class="bi bi-info-circle"></i>
       Why did this happen?
  </h3>
 </div>
      <div class="staff-card-body-clean">
        <ul style="color: #888; line-height: 1.8; margin: 0; padding-left: 1.25rem;">
      <li>You clicked the back button during payment</li>
         <li>You closed the Stripe checkout page</li>
    <li>You chose to cancel the transaction</li>
   <li>Your payment session expired</li>
   </ul>

     <div style="margin-top: 1.5rem; padding: 1rem; background: rgba(0, 112, 243, 0.05); border-left: 3px solid #0070f3; border-radius: 4px;">
      <p style="color: #0070f3; font-weight: 600; margin-bottom: 0.5rem;">
   <i class="bi bi-lightbulb"></i> Tip
       </p>
      <p style="color: #888; margin: 0;">
  If you experienced any issues during checkout, please try again. Our system uses Stripe's secure payment gateway for your safety.
    </p>
 </div>
   </div>
   </div>

     <!-- Quick Actions -->
   <div class="staff-card-clean">
  <div class="staff-card-header-clean">
 <h3 class="staff-card-title-clean">
        <i class="bi bi-lightning-charge"></i>
     What would you like to do?
       </h3>
 </div>
       <div class="staff-card-body-clean">
   <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
       <div style="text-align: center;">
   <div style="font-size: 2rem; color: #0070f3; margin-bottom: 0.75rem;">
     <i class="bi bi-credit-card"></i>
     </div>
        <h5 style="color: #fff; margin-bottom: 0.5rem;">Try Again</h5>
        <p style="color: #888; font-size: 0.875rem; margin-bottom: 1rem;">
       Recharge your wallet with a different amount
       </p>
     <a asp-page="/Wallet/Recharge" class="btn-clean btn-action-clean">
        <i class="bi bi-arrow-right"></i>
   Recharge Now
  </a>
 </div>
   <div style="text-align: center;">
 <div style="font-size: 2rem; color: #22c55e; margin-bottom: 0.75rem;">
    <i class="bi bi-wallet2"></i>
    </div>
      <h5 style="color: #fff; margin-bottom: 0.5rem;">View Wallet</h5>
       <p style="color: #888; font-size: 0.875rem; margin-bottom: 1rem;">
       Check your current balance and history
        </p>
<a asp-page="/Wallet/Index" class="btn-clean btn-action-clean">
<i class="bi bi-arrow-right"></i>
  Go to Wallet
  </a>
 </div>
     <div style="text-align: center;">
 <div style="font-size: 2rem; color: #f59e0b; margin-bottom: 0.75rem;">
        <i class="bi bi-cart-check"></i>
 </div>
    <h5 style="color: #fff; margin-bottom: 0.5rem;">Browse Posts</h5>
        <p style="color: #888; font-size: 0.875rem; margin-bottom: 1rem;">
    Explore vehicles and batteries for sale
         </p>
    <a asp-page="/PostPages/Index" class="btn-clean btn-action-clean">
<i class="bi bi-arrow-right"></i>
   Browse Now
     </a>
     </div>
      </div>
   </div>
        </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    <script>
     // Auto-hide alerts after 5 seconds
 setTimeout(() => {
      const alerts = document.querySelectorAll('.alert');
   alerts.forEach(alert => {
         alert.style.opacity = '0';
          alert.style.transition = 'opacity 0.3s';
     setTimeout(() => alert.remove(), 300);
            });
 }, 5000);
    </script>
}
