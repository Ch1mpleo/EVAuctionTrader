@page
@model EVAuctionTrader.Presentation.Pages.Wallet.IndexModel
@{
    ViewData["Title"] = "My Wallet";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="staff-page-clean">
    <div class="container">
     <!-- Header -->
        <div class="staff-header-clean">
            <h1 class="staff-title-clean">
        <i class="bi bi-wallet2"></i>
  My Wallet
            </h1>
       <p class="staff-subtitle-clean">Manage your wallet balance and transactions</p>
  </div>

        @if (TempData["SuccessMessage"] != null)
{
      <div class="alert alert-success alert-dismissible fade show" role="alert">
     <i class="bi bi-check-circle-fill"></i>
                @TempData["SuccessMessage"]
   <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
   }

        @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
     <i class="bi bi-exclamation-triangle-fill"></i>
      @TempData["ErrorMessage"]
     <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Wallet Balance Card -->
     <div class="staff-card-clean">
         <div class="staff-card-header-clean">
         <h3 class="staff-card-title-clean">
     <i class="bi bi-cash-coin"></i>
    Wallet Balance
     </h3>
        </div>
            <div class="staff-card-body-clean">
     <div class="row align-items-center">
           <div class="col-md-6">
                <div style="display: flex; align-items: baseline; gap: 1rem; margin-bottom: 1rem;">
       <div style="font-size: 3rem; font-weight: 700; color: #0070f3;">
    $@Model.Balance.ToString("N2")
          </div>
           <div style="color: #888; font-size: 1rem;">
  USD
       </div>
            </div>
           <p style="color: #888; margin-bottom: 0;">
          <i class="bi bi-info-circle"></i>
      Available balance in your wallet
             </p>
                </div>
<div class="col-md-6 text-md-end">
    <a asp-page="/Wallet/Recharge" class="btn-clean btn-primary-clean" style="display: inline-flex;">
         <i class="bi bi-plus-circle"></i>
 Recharge Wallet
             </a>
            </div>
        </div>
          </div>
  </div>

        <!-- Quick Actions -->
        <div class="staff-card-clean">
      <div class="staff-card-header-clean">
          <h3 class="staff-card-title-clean">
     <i class="bi bi-lightning-charge"></i>
           Quick Actions
                </h3>
    </div>
      <div class="staff-card-body-clean">
   <div class="row g-3">
   <div class="col-md-4">
             <div class="info-card-clean" style="text-align: center; padding: 2rem 1rem;">
      <div style="font-size: 2.5rem; color: #0070f3; margin-bottom: 1rem;">
       <i class="bi bi-credit-card"></i>
        </div>
   <h5 style="color: #fff; margin-bottom: 0.5rem;">Add Funds</h5>
                  <p style="color: #888; font-size: 0.875rem; margin-bottom: 1rem;">
 Top up your wallet using credit card
    </p>
      <a asp-page="/Wallet/Recharge" class="btn-clean btn-action-clean">
        <i class="bi bi-arrow-right"></i>
      Recharge Now
        </a>
     </div>
     </div>
   <div class="col-md-4">
            <div class="info-card-clean" style="text-align: center; padding: 2rem 1rem;">
   <div style="font-size: 2.5rem; color: #22c55e; margin-bottom: 1rem;">
   <i class="bi bi-list-check"></i>
</div>
            <h5 style="color: #fff; margin-bottom: 0.5rem;">Transactions</h5>
    <p style="color: #888; font-size: 0.875rem; margin-bottom: 1rem;">
       View your transaction history
          </p>
<a asp-page="/Wallet/Transactions" class="btn-clean btn-action-clean">
  <i class="bi bi-arrow-right"></i>
             View History
   </a>
    </div>
    </div>
     <div class="col-md-4">
 <div class="info-card-clean" style="text-align: center; padding: 2rem 1rem;">
   <div style="font-size: 2.5rem; color: #f59e0b; margin-bottom: 1rem;">
          <i class="bi bi-shield-check"></i>
    </div>
      <h5 style="color: #fff; margin-bottom: 0.5rem;">Secure Payments</h5>
          <p style="color: #888; font-size: 0.875rem; margin-bottom: 1rem;">
          Protected by Stripe payment gateway
          </p>
           <div class="badge-clean badge-success">
              <i class="bi bi-check-circle-fill"></i>
 Verified
  </div>
</div>
           </div>
              </div>
       </div>
        </div>

     
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
    const alerts = document.querySelectorAll('.alert');
          alerts.forEach(alert => {
                alert.style.opacity = '0';
         alert.style.transition = 'opacity 0.3s';
 setTimeout(() => alert.remove(), 300);
            });
  }, 5000);
 </script>
}
