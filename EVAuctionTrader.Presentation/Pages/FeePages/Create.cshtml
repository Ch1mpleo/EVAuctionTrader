@page
@model EVAuctionTrader.Presentation.Pages.FeePages.CreateModel
@{
    ViewData["Title"] = "Create Fee";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="staff-page-clean">
    <div class="container">
        <!-- Header -->
        <div class="staff-header-clean">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h1 class="staff-title-clean">
                        <i class="bi bi-plus-circle"></i>
                        Create New Fee
                    </h1>
                    <p class="staff-subtitle-clean">Add a new fee to the system</p>
                </div>
                <a asp-page="/FeePages/Index" class="btn-clean btn-secondary-clean">
                    <i class="bi bi-arrow-left"></i> Back to Fees
                </a>
            </div>
        </div>

        <!-- Form Card -->
        <div class="staff-card-clean">
            <div class="staff-card-body-clean">
                <form method="post">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <div class="row g-4">
                        <!-- Fee Type -->
                        <div class="col-md-6">
                            <label class="form-label" style="color: #ffffff; font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="bi bi-tag"></i> Fee Type
                            </label>
                            <select asp-for="FeeRequest.Type"
                                    asp-items="Model.FeeTypes"
                                    class="filter-input-clean"
                                    required>
                                <option value="">Select Fee Type</option>
                            </select>
                            <span asp-validation-for="FeeRequest.Type" class="text-danger"></span>
                        </div>

                        <!-- Amount -->
                        <div class="col-md-6">
                            <label class="form-label" style="color: #ffffff; font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="bi bi-currency-dollar"></i> Amount (VND)
                            </label>
                            <input asp-for="FeeRequest.Amount"
                                   type="number"
                                   step="0.01"
                                   min="0.01"
                                   class="filter-input-clean"
                                   placeholder="Enter fee amount"
                                   required />
                            <span asp-validation-for="FeeRequest.Amount" class="text-danger"></span>
                            <small style="color: #aaaaaa; display: block; margin-top: 0.25rem;">
                                Enter the fee amount in VND (e.g., 50000 for 50,000 VND)
                            </small>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label class="form-label" style="color: #ffffff; font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="bi bi-file-text"></i> Description
                            </label>
                            <textarea asp-for="FeeRequest.Description"
                                      rows="4"
                                      class="filter-input-clean"
                                      placeholder="Enter fee description"
                                      required
                                      style="resize: vertical; min-height: 100px;"></textarea>
                            <span asp-validation-for="FeeRequest.Description" class="text-danger"></span>
                            <small style="color: #aaaaaa; display: block; margin-top: 0.25rem;">
                                Provide a clear description of what this fee is for and when it's charged
                            </small>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div style="display: flex; gap: 1rem; justify-content: flex-end; margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #2a2a2a;">
                        <a asp-page="/FeePages/Index" class="btn-clean btn-secondary-clean">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn-clean btn-success-clean">
                            <i class="bi bi-check-circle"></i> Create Fee
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Info Card -->
        <div class="staff-card-clean" style="margin-top: 1.5rem; background: rgba(0, 112, 243, 0.1); border-color: rgba(0, 112, 243, 0.3);">
            <div class="staff-card-body-clean">
                <h5 style="color: #0070f3; margin-bottom: 1rem;">
                    <i class="bi bi-info-circle-fill"></i> Important Information
                </h5>
                <ul style="color: #aaaaaa; margin: 0; padding-left: 1.5rem;">
                    <li style="margin-bottom: 0.5rem;">Each fee type can only exist once in the system</li>
                    <li style="margin-bottom: 0.5rem;">Fee amounts should be entered in VND</li>
                    <li style="margin-bottom: 0.5rem;">Fees are applied automatically when users perform related actions</li>
                    <li style="margin-bottom: 0.5rem;">You can update fee amounts later if needed</li>
                    <li>Deleting a fee will not affect historical transactions</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
