@page
@using EVAuctionTrader.BusinessObject.Enums
@model EVAuctionTrader.Presentation.Pages.FeePages.IndexModel
@{
    ViewData["Title"] = "Fee Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="staff-page-clean">
    <div class="container">
        <!-- Header -->
        <div class="staff-header-clean">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h1 class="staff-title-clean">
                        <i class="bi bi-cash-coin"></i>
                        Fee Management
                    </h1>
                    <p class="staff-subtitle-clean">Manage system fees and charges</p>
                </div>
                <a asp-page="/FeePages/Create" class="btn-clean btn-success-clean">
                    <i class="bi bi-plus-circle"></i> Create New Fee
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Fees Table -->
        @if (Model.Fees != null && Model.Fees.Any())
        {
            <div class="staff-card-clean">
                <div class="table-responsive">
                    <table class="table-clean">
                        <thead>
                            <tr>
                                <th>Fee Type</th>
                                <th>Amount</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Last Updated</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fee in Model.Fees)
                            {
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                                            @switch (fee.Type)
                                            {
                                                case FeeType.VipPostFee:
                                                    <span class="badge-clean" style="background: linear-gradient(135deg, #FFD700, #FFA500);">
                                                        <i class="bi bi-star-fill"></i> VIP Post Fee
                                                    </span>
                                                    break;
                                                default:
                                                    <span class="badge-clean badge-info">
                                                        @fee.Type
                                                    </span>
                                                    break;
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <strong style="color: #22c55e; font-size: 1.125rem;">
                                            $@fee.Amount.ToString("N0")
                                        </strong>
                                    </td>
                                    <td>
                                        <div style="max-width: 400px; color: #aaaaaa;">
                                            @fee.Description
                                        </div>
                                    </td>
                                    <td>
                                        <div class="date-cell-clean">
                                            <div class="date-primary-clean">
                                                @fee.CreatedAt.ToString("MMM dd, yyyy")
                                            </div>
                                            <div class="date-secondary-clean">
                                                @fee.CreatedAt.ToString("hh:mm tt")
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (fee.UpdatedAt.HasValue)
                                        {
                                            <div class="date-cell-clean">
                                                <div class="date-primary-clean">
                                                    @fee.UpdatedAt.Value.ToString("MMM dd, yyyy")
                                                </div>
                                                <div class="date-secondary-clean">
                                                    @fee.UpdatedAt.Value.ToString("hh:mm tt")
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span style="color: #666;">Never</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-group-clean">
                                            <a asp-page="/FeePages/Edit" asp-route-id="@fee.Id"
                                               class="btn-action-clean btn-action-success"
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <form method="post" asp-page-handler="Delete" asp-route-id="@fee.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn-action-clean btn-action-danger"
                                                        title="Delete"
                                                        onclick="return confirm('Are you sure you want to delete this fee? This action cannot be undone.');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Fees.TotalPages > 1)
                {
                    <div class="pagination-clean">
                        @if (Model.Fees.HasPrevious)
                        {
                            <a asp-page="/FeePages/Index"
                               asp-route-pageNumber="@(Model.Fees.CurrentPage - 1)"
                               asp-route-pageSize="@Model.PageSize"
                               class="page-btn-clean">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        }

                        <span class="page-info-clean">
                            Page @Model.Fees.CurrentPage of @Model.Fees.TotalPages
                        </span>

                        @if (Model.Fees.HasNext)
                        {
                            <a asp-page="/FeePages/Index"
                               asp-route-pageNumber="@(Model.Fees.CurrentPage + 1)"
                               asp-route-pageSize="@Model.PageSize"
                               class="page-btn-clean">
                                Next <i class="bi bi-chevron-right"></i>
                            </a>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="staff-card-clean">
                <div class="staff-card-body-clean">
                    <div class="empty-state-clean">
                        <i class="bi bi-cash-coin empty-icon-clean"></i>
                        <h3 class="empty-title-clean">No Fees Configured</h3>
                        <p class="empty-description-clean">
                            There are no fees configured in the system yet.<br />
                            Create your first fee to get started!
                        </p>
                        <a asp-page="/FeePages/Create" class="btn-clean btn-success-clean mt-3">
                            <i class="bi bi-plus-circle"></i> Create First Fee
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                alert.style.transition = 'opacity 0.3s';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);
    </script>
}
