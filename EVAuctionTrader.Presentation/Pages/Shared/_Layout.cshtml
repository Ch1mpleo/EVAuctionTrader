<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EV Auction Trader</title>

    <!-- Lightning Icon Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%230070f3'><path d='M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z'/></svg>">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVAuctionTrader.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    @RenderSection("Styles", required: false)

    <style>
        .wallet-balance {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            margin-right: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
            transition: all 0.3s ease;
        }

            .wallet-balance:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            }

            .wallet-balance i {
                font-size: 18px;
            }

        .wallet-amount {
            font-size: 16px;
            letter-spacing: 0.5px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .wallet-balance {
                padding: 6px 12px;
                font-size: 14px;
            }

            .wallet-amount {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    @{
        var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
        var userName = User.Identity?.Name;
        var userEmail = User.FindFirst(System.IdentityModel.Tokens.Jwt.JwtRegisteredClaimNames.Email)?.Value;
        var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;

        var userInitials = "";
        if (!string.IsNullOrEmpty(userName))
        {
            var nameParts = userName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
            userInitials = nameParts.Length >= 2
            ? $"{nameParts[0][0]}{nameParts[1][0]}"
            : nameParts[0].Length >= 2
            ? $"{nameParts[0][0]}{nameParts[0][1]}"
            : nameParts[0][0].ToString();
            userInitials = userInitials.ToUpper();
        }

        // Lấy số dư wallet
        decimal walletBalance = 0m;
        if (isAuthenticated)
        {
            try
            {
                var walletService = Context.RequestServices.GetService<EVAuctionTrader.Business.Interfaces.IUserService>();
                walletBalance = await walletService.GetMyBalanceAsync();
            }
            catch
            {
                walletBalance = 0m;
            }
        }
    }

    <header class="modern-header">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Home/LandingPage">
                    <i class="bi bi-lightning-charge-fill me-2"></i>
                    EV Auction Trader
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/PostPages/Index">
                                <i class="bi bi-grid-3x3-gap me-1"></i>
                                Browse Posts
                            </a>
                        </li>                    
                        @if (isAuthenticated && userRole == "Member")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/PostPages/Create">
                                    <i class="bi bi-plus-circle me-1"></i>
                                    Create Post
                                </a>
                            </li>                          
                        }
                    </ul>

                    <div class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <!-- Hiển thị số dư wallet -->
                            <div class="wallet-balance">
                                <i class="bi bi-wallet2"></i>
                                <span class="wallet-amount">@walletBalance.ToString("N0") VND</span>
                            </div>

                            <div class="dropdown user-dropdown">
                                <a class="nav-link dropdown-toggle user-menu-trigger" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        <span class="user-initials">@userInitials</span>
                                    </div>
                                    <div class="user-info d-none d-lg-block">
                                        <div class="user-name">@userName</div>
                                        <div class="user-role">@userRole</div>
                                    </div>
                                    <i class="bi bi-chevron-down ms-2"></i>
                                </a>
                                <ul class="dropdown-menu user-dropdown-menu" aria-labelledby="userDropdown">
                                    <li class="dropdown-header">
                                        <div class="user-details">
                                            <div class="user-avatar-large">
                                                <span class="user-initials">@userInitials</span>
                                            </div>
                                            <div class="user-meta">
                                                <div class="user-name-large">@userName</div>
                                                <div class="user-email">@userEmail</div>
                                                <div class="user-role-badge">@userRole</div>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Thêm menu Wallet -->
                                    <li>
                                        <a class="dropdown-item" asp-page="/Wallet/Index">
                                            <i class="bi bi-wallet2 me-2"></i>
                                            My Wallet
                                            <span class="badge bg-primary ms-2">@walletBalance.ToString("N0") VND</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-page="/Profile/Index">
                                            <i class="bi bi-person me-2"></i>
                                            Profile
                                        </a>
                                    </li>

                                    @if (userRole == "Admin")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/TestDrive/Index">
                                                <i class="fa-regular fa-calendar-check me-2"></i>
                                                Test Drive Appointments
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Staff/ManageOrders">
                                                <i class="bi bi-bag-check me-2"></i>
                                                Customer Orders
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Staff/ManageDeliveries">
                                                <i class="bi bi-truck me-2"></i>
                                                Customer Deliveries
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/Staff/Customers">
                                                <i class="bi bi-people me-2"></i>
                                                Manage Customer
                                            </a>
                                        </li>
                                    }
                                    else if (userRole == "Member")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-page="/PostPages/Index">
                                                <i class="bi bi-grid-3x3-gap me-2"></i>
                                                Browse Posts
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-page="/PostPages/Create">
                                                <i class="bi bi-plus-circle me-2"></i>
                                                Create New Post
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-page="/Auth/Login" asp-page-handler="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i>
                                                Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="nav-link me-2" asp-page="/Auth/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Login
                            </a>
                            <a class="nav-link btn btn-outline-primary px-3" asp-page="/Auth/Register">
                                Register
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="modern-footer">
        <div class="container">
            <div class="row gy-4">
                <div class="col-md-4">
                    <div class="footer-brand">
                        <h5 class="fw-bold mb-3">
                            <i class="bi bi-lightning-charge-fill me-2"></i>
                            EV Auction Trader
                        </h5>
                        <p class="text-muted mb-3">
                            The trusted marketplace for buying and selling pre-owned electric vehicles and batteries.
                        </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <h6 class="fw-semibold mb-3">Quick Links</h6>
                    <ul class="list-unstyled footer-links">
                        <li class="mb-2">
                            <a asp-page="/PostPages/Index" class="text-muted text-decoration-none">
                                <i class="bi bi-chevron-right me-1"></i> Browse Posts
                            </a>
                        </li>
                        @if (isAuthenticated && userRole == "Member")
                        {
                            <li class="mb-2">
                                <a asp-page="/PostPages/Create" class="text-muted text-decoration-none">
                                    <i class="bi bi-chevron-right me-1"></i> Create Post
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="col-md-4">
                    <h6 class="fw-semibold mb-3">Contact</h6>
                    <ul class="list-unstyled footer-contact">
                        <li class="mb-2">
                            <i class="bi bi-envelope me-2"></i>
                            support@evauctiontrader.com
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2"></i>
                            (123) 456-7890
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="my-4">

            <div class="text-center">
                <p class="text-muted mb-0">
                    &copy; 2025 EV Auction Trader. All rights reserved.
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>