@page
@model EVAuctionTrader.Presentation.Pages.Home.LandingPageModel
@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/landingPage.css" />
}

<section class="hero-section">
    <div class="container-fluid px-0">
        <div class="row g-0 min-vh-100">
            <div class="col-lg-6 d-flex align-items-center">
                <div class="hero-content p-5">
                    <div class="hero-badge mb-4">
                        <i class="bi bi-lightning-charge-fill me-2"></i>
                        Pre-Owned EV Marketplace
                    </div>
                    <h1 class="hero-title mb-4">
                        Buy & Sell
                        <span class="text-primary">Used Electric Vehicles & Batteries</span>
                    </h1>
                    <p class="hero-description mb-5">
                        Join the largest marketplace for pre-owned electric vehicles and batteries.
                        Discover great deals through auctions or buy directly from verified sellers.
                        Sustainable mobility made affordable.
                    </p>
                    <div class="hero-actions">
                        <a asp-page="/PostPages/Index" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-search me-2"></i>
                            Browse Posts
                        </a>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Member"))
                        {
                            <a asp-page="/PostPages/Create" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-plus-circle me-2"></i>
                                Create Listing
                            </a>
                        }
                        else
                        {
                            <a asp-page="/Auth/Login" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Get Started
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image-full">
                    <img src="https://images.unsplash.com/photo-1560958089-b8a1929cea89?q=80&w=1171&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                         alt="Used Electric Vehicle Marketplace" class="hero-image">
                </div>
            </div>
        </div>
    </div>
</section>

<section class="stats-section py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card text-center">
                    <div class="stat-number">1,500+</div>
                    <div class="stat-label">Active Listings</div>
                    <div class="stat-description">vehicles & batteries available</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card text-center">
                    <div class="stat-number">30%</div>
                    <div class="stat-label">Average Savings</div>
                    <div class="stat-description">vs. buying new</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card text-center">
                    <div class="stat-number">98%</div>
                    <div class="stat-label">Customer Satisfaction</div>
                    <div class="stat-description">rated by our traders</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="stat-card text-center">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Support</div>
                    <div class="stat-description">always here to help</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Posts Section -->
<section class="featured-vehicles py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Featured Listings</h2>
            <p class="section-description">
                Check out the latest vehicles and batteries available on our marketplace
            </p>
        </div>

        <div class="row g-4">
            <!-- Sample featured post cards - these would come from your service in real implementation -->
            <div class="col-lg-4 col-md-6">
                <div class="vehicle-card">
                    <div class="vehicle-image">
                        <img src="https://images.unsplash.com/photo-1593941707882-a5bba14938c7?q=80&w=1172&auto=format&fit=crop"
                             alt="Electric Vehicle">
                        <span class="vehicle-badge">Featured</span>
                    </div>
                    <div class="vehicle-info">
                        <h3 class="vehicle-name">Tesla Model 3</h3>
                        <p class="vehicle-description">Low mileage, excellent condition, one owner</p>
                        <div class="vehicle-specs">
                            <span class="spec-item"><i class="bi bi-calendar me-1"></i> 2020</span>
                            <span class="spec-item"><i class="bi bi-speedometer me-1"></i> 45,000 km</span>
                        </div>
                        <div class="vehicle-price">450,000,000 VND</div>
                        <a asp-page="/PostPages/Index" class="btn btn-outline-primary w-100">
                            <i class="bi bi-search me-1"></i> View All Posts
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="vehicle-card">
                    <div class="vehicle-image">
                        <img src="https://images.unsplash.com/photo-1552519507-da3b142c6e3d?q=80&w=1170&auto=format&fit=crop"
                             alt="Battery Pack">
                        <span class="vehicle-badge">New</span>
                    </div>
                    <div class="vehicle-info">
                        <h3 class="vehicle-name">EV Battery Pack - 60kWh</h3>
                        <p class="vehicle-description">95% SOH, LiFePO4 chemistry, tested</p>
                        <div class="vehicle-specs">
                            <span class="spec-item"><i class="bi bi-lightning-charge me-1"></i> 60 kWh</span>
                            <span class="spec-item"><i class="bi bi-heart-pulse me-1"></i> 95% SOH</span>
                        </div>
                        <div class="vehicle-price">85,000,000 VND</div>
                        <a asp-page="/PostPages/Index" asp-route-postType="1" class="btn btn-outline-primary w-100">
                            <i class="bi bi-battery-charging me-1"></i> View Batteries
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="vehicle-card">
                    <div class="vehicle-image">
                        <img src="https://images.unsplash.com/photo-1617788138017-80ad40651399?q=80&w=1171&auto=format&fit=crop"
                             alt="Electric Vehicle">
                        <span class="vehicle-badge">Popular</span>
                    </div>
                    <div class="vehicle-info">
                        <h3 class="vehicle-name">Nissan Leaf</h3>
                        <p class="vehicle-description">Reliable city car, well maintained</p>
                        <div class="vehicle-specs">
                            <span class="spec-item"><i class="bi bi-calendar me-1"></i> 2019</span>
                            <span class="spec-item"><i class="bi bi-speedometer me-1"></i> 52,000 km</span>
                        </div>
                        <div class="vehicle-price">320,000,000 VND</div>
                        <a asp-page="/PostPages/Index" asp-route-postType="0" class="btn btn-outline-primary w-100">
                            <i class="bi bi-car-front me-1"></i> View Vehicles
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a asp-page="/PostPages/Index" class="btn btn-primary btn-lg">
                <i class="bi bi-grid-3x3-gap me-2"></i>
                View All Listings
            </a>
        </div>
    </div>
</section>

<section class="benefits-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="benefits-content">
                    <h2 class="section-title mb-4">Why Trade Pre-Owned EVs?</h2>
                    <p class="section-description mb-5">
                        Make sustainable choices more accessible. Our marketplace connects buyers and sellers
                        of quality used electric vehicles and batteries, extending their lifecycle and reducing waste.
                    </p>

                    <div class="benefit-list">
                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-piggy-bank"></i>
                            </div>
                            <div class="benefit-content">
                                <h5>Affordable Prices</h5>
                                <p>Save 30-50% compared to new EVs while going electric</p>
                            </div>
                        </div>

                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-grid-3x3-gap"></i>
                            </div>
                            <div class="benefit-content">
                                <h5>Easy Listing</h5>
                                <p>Create posts in minutes to sell your vehicle or battery</p>
                            </div>
                        </div>

                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <div class="benefit-content">
                                <h5>Verified Sellers</h5>
                                <p>All listings inspected and certified for quality assurance</p>
                            </div>
                        </div>

                        <div class="benefit-item">
                            <div class="benefit-icon">
                                <i class="bi bi-recycle"></i>
                            </div>
                            <div class="benefit-content">
                                <h5>Sustainable Impact</h5>
                                <p>Extend EV lifecycle and reduce environmental footprint</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="benefits-image">
                    <img src="https://images.unsplash.com/photo-1593941707882-a5bba14938c7?q=80&w=1172&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                         alt="Used Electric Vehicle Benefits" class="img-fluid rounded-3">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="text-center">
            <h2 class="cta-title">Ready to Start Trading?</h2>
            <p class="cta-description">
                Join thousands of satisfied customers buying and selling pre-owned EVs
            </p>
            <div class="cta-actions">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-page="/PostPages/Create" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-plus-circle me-2"></i>
                        Create Your Listing
                    </a>
                    <a asp-page="/PostPages/Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-search me-2"></i>
                        Browse Marketplace
                    </a>
                }
                else
                {
                    <a asp-page="/Auth/Register" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-person-plus me-2"></i>
                        Sign Up Now
                    </a>
                    <a asp-page="/PostPages/Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-search me-2"></i>
                        Browse Without Login
                    </a>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/landingPage.js" asp-append-version="true"></script>
}